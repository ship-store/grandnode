
@model IEnumerable<Grand.Core.Domain.MakerEntity.Maker>

@inject Grand.Core.Domain.Common.AdminAreaSettings adminAreaSettings
@{
    ViewBag.Title = T("Maintenance.Title.Maker").Text;
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">
            <h2>
                Add Maker Details
            </h2>
            <ul class="header-dropdown m-r--5">
                <li class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="material-icons">more_vert</i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="javascript:void(0);">Action</a></li>
                        <li><a href="javascript:void(0);">Another action</a></li>
                        <li><a href="javascript:void(0);">Something else here</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <br>
        <div class="body">
            <form action="AddMakerDetails1" method="get">

                <div class="container-fluid" style="width: 80%;">
                    <div class="table-responsive">

                        <table class="table">

                            <tr>
                                <td><label for="EquipmentName">Maker</label></td>
                                <td>
                                    <select class="form-control show-tick" name="Maker">
                                        @foreach (var item in Model)
                                        {
                                            <option value=@item.Name name=@item.Name>@item.Name</option>
                                        }

                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="Code">Model</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" name="Model" />

                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="Country">Remark</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" name="Remark" />

                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><input type="submit" class="btn btn-primary m-t-15 waves-effect" value="Add" /></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



