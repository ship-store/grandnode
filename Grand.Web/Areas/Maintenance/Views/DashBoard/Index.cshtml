@model ViewModel
@{
    ViewBag.Title = T("Maintenance.Title.Success").Text;


}
<!DOCTYPE html>

@{
    var VesselName = @HttpContextAccessor.HttpContext.Session.GetString("VesselName");
    var SessionVar = @HttpContextAccessor.HttpContext.Session.GetString("email");

    if (VesselName == null)
    {
        <script>

        $(window).load(function(){
            swal({

                text: 'Please select a Vessel',
                allowOutsideClick: false,
                background: 'white',
                confirmButtonText:'OK',
                confirmButtonColor: '#0f5f86',

            })
                .then(function () {
                    var url1 = location.origin + "Maintenance/DueJob/ReadDueJob";
                    $.ajax({
                            type: "GET",
    	                        url:"http://localhost:16599/Maintenance/DueJob/ReadDueJob",
    	                        success: function(data){
                                    // $('#data').text(data);
                                    alert("Haiu");

    	                        },
    	                        error: function(){
    		                        alert("There was an error.");
    	                        }
                            });


                    window.location.href = '@Url.Action("VesselList","Vessel")';
                })

            });

        </script>
    }

    if (SessionVar == null)
    {
        <script>

            $(window).load(function ()
            {
            swal({

                title: 'TimeOut!',
                allowOutsideClick: false,
                text: '"Time Out! , Please Login"',
                background: 'white',
                confirmButtonText: 'OK',
                confirmButtonColor: '#48b4e0',
            })
                .then(function ()
                {
                    window.location.href = '@Url.Action("LoginPage","Register")';
                })

            });

        </script>
    }

}


<html>
<head>
    <meta name=" viewport" content="width=device-width" />
