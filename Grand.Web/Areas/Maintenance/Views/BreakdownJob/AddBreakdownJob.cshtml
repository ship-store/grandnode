        <div class="body">
            <form action="AddBreakdownJobDetails" method="post" name="contact_form" id="first_form">

                <input type="hidden" value="@vessel" name="Vessel" />
                      <table class="table" style="color:#0E5679;border-color:#0E5679;">
                            <tr>
                                <td style="border:none;">
                                    <select id="ddlFruits" name="EquipmentName" class="form-control valid" style="float:left;width:21%;color:#0E5679;border-color:#0E5679">
                                        <option value="">Please select Equipment</option>
                                        @foreach (var item in Model)
                                        {

                                            <option value="@item.Sub1_description@item.Sub2_description@item.Sub3_description@item.Sub4_description@item.Sub5_description">@item.Sub1_description@item.Sub2_description@item.Sub3_description@item.Sub4_description@item.Sub5_description</option>


                                        }
                                    </select>
                                    <div style="float:left;position:relative;left:-2px;">
                                        <input type="text" class="form-control valid" readonly value="@joborder" name="JobOrder" id="n2" style="margin-left:30px;border-color:#0E5679;float:left;width:90%;height:auto;color:#0E5679;" />
                                    </div>
                                    <div style="float:left;position:relative;left:36px;">
                                        <input type="text" class="form-control valid" placeholder="Description" name="Title" id="n3" style="border-color:#0E5679;margin-left:5px;float:left;width:100%;height:auto;color:#0E5679;" />

                                    </div>
                                    <div style="float:left;position:relative;">
                                        <input type="date" class="form-control valid" name="JobReportedDate" id="n4" style="border-color:#0E5679;margin-left:65px;float:left;width:89%;color:#0E5679;" />

                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td style="border:none;">

                                    <select class="form-control show-tick" name="ReportedBy" style="float:left;width:21%;color:#0E5679;border-color:#0E5679">
                                        @foreach (var reporter in reporterList)
                                        {

                                            <option value=@reporter.Reported_By name=@reporter.Reported_By>@reporter.Reported_By</option>


                                        }

                                    </select>
                                    <div style="float:left;position:relative;left:-2px;">
                                        <select class="form-control show-tick" name="Status" style="margin-left:30px;border-color:#0E5679;float:left;width:125%;height:auto;color:#0E5679;">
                                            @foreach (var status in statusList)
                                            {

                                                <option value=@status.Status name=@status.Status>@status.Status</option>


                                            }

                                        </select>
                                    </div>
                                </td>
                            </tr>

                            <tr>
