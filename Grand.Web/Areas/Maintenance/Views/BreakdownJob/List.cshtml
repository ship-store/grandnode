                            title: "Equipment Name",
                            width: "120px",

                        },
                        {
                            field: "JobOrder",
                            title: "Job Order",
                            width: "90px"
                        },
                        {
                            field: "Title",
                            title: "Title",
                            width: "90px"
                        },
                        {
                            field: "JobReportedDate",
                            title: "Job Reported Date",
                            width: "120px",
                            editor: function (container, options)
                            {
                                var dateString = kendo.toString(options.model.JobReportedDate, "dd-MM-yyyy");
                                var $input = $("<input value=" + dateString + " />").appendTo(container);
                                $input.datepicker().toString();
                            },
                            //format: "{0:MM-dd-yyyy}"
                        },
                        {
                            field: "ReportedBy",
                            title: "Reported By",
                            width: "120px"
                        },
                        {
                            field: "Status",
                            title: "Status",
                            width: "80px"
