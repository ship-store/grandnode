                                type: "POST",
                                dataType: "json"
                            }

                        },
                        batch: true,
                        pageSize: 50,
                        schema:
                        {
                            data: "Data",
                            total: "Total",
                            errors: "Errors",
                            model:
                            {
                                id : "Id",
                                fields:
                                {
                                    Id:
                                    {
                                        validation: { required: true },
                                        editable: false,
                                    },
                                    EquipmentName: { validation: { required: true } },
                                    JobOrder: {type: "string", validation: { required: true } },
