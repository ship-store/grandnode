@{
    ViewBag.Title = T("Maintenance.Title.AddUnplannedJobs").Text;
    var vessel = @HttpContextAccessor.HttpContext.Session.GetString("VesselName");
    var JobOrder = ViewBag.joborder;
    var reporterList = ViewBag.ReporterList;
    var statusList = ViewBag.StatusList;
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">
            <h2>
                Unplanned Job
            </h2>
            @*<ul class="header-dropdown m-r--5">
                <li class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="material-icons">more_vert</i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="javascript:void(0);">Action</a></li>
                        <li><a href="javascript:void(0);">Another action</a></li>
                        <li><a href="javascript:void(0);">Something else here</a></li>
                    </ul>
                </li>
            </ul>*@
        </div>
        <br>

        <div class="body">
            <form action="AddUnplannedJobDetails" method="post" name="contact_form" id="first_form">
                <input type="hidden" value="@vessel" name="Vessel" />
                <div class="container-fluid" style="width: 80%;">
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <td><label for="EquipmentName">Equipment Name</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <select id="ddlFruits" name="EquipmentName" class="form-line form-group form-control valid">
                                                <option value="">Please select Equipment</option>
                                                @foreach (var item in Model)
                                                {

                                                    <option value="@item.Sub1_description@item.Sub2_description@item.Sub3_description@item.Sub4_description@item.Sub5_description">@item.Sub1_description@item.Sub2_description@item.Sub3_description@item.Sub4_description@item.Sub5_description</option>


                                                }
                                            </select>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="Job Order">Job Order</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control valid" readonly value="@JobOrder" name="JobOrder" id="n2" />
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="Title">Title</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control valid" name="Title" id="n3" />
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="JobReportedDate">Job Reported Date</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="date" class="form-control valid" name="JobReportedDate" id="n4" />
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="ReportedBy">Reported By</label></td>
                                <td>
                                    <select class="form-control show-tick" name="ReportedBy">
                                        @foreach (var reporter in reporterList)
                                        {

                                            <option value=@reporter.Reported_By name=@reporter.Reported_By>@reporter.Reported_By</option>


                                        }

                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="Status">Status</label></td>
                                <td>
                                    <select class="form-control show-tick" name="Status">
                                        @foreach (var status in statusList)
                                        {

                                            <option value=@status.Status name=@status.Status>@status.Status</option>


                                        }

                                    </select>
                                </td>
                            </tr>
                            <tr>
                                @Html.AntiForgeryToken()
                                <td><input type="submit" value="&#xf0f6" class="fa fa-floppy-o aria-hidden=true" style="width:35px;position:relative;height:33px;background-color:#0E5679;color:white;" id="submit" /></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("form").on('submit', function (e) {
            $(".valid").each(function () {

                var input = $(this);
                if (input.val() == "") {
                    swal($(this).attr("name") + " Cannot be blank");
                    e.preventDefault();
                    return false;
                }

            }
            });
    });
    });
</script>