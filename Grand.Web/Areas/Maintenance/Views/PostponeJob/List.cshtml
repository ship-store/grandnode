<script>
    $("#btnSelectRow1").click(function () {

        var grid = $("#grid").data("kendoGrid");
        var selectedItem = grid.dataItem(grid.select());
        if (selectedItem == null) {

            window.location.reload();
            alert("Please Select a Job");
        }
        else {
            var Bid = selectedItem.Id;
            var equipmentname = selectedItem.EquipmentName;
            var equipmentCode = selectedItem.EquipmentCode;
            var jobTitle = selectedItem.JobTitle;
            var frequency = selectedItem.Frequency;
            var department = selectedItem.Department;
