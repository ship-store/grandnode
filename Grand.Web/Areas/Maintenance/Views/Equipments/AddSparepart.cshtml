@model ViewModel
@{
    var VesselName = @HttpContextAccessor.HttpContext.Session.GetString("VesselName");
   
    if (VesselName == null)
    {
        <script>
            alert("please Select Vessel");
        </script>
    }
     var ecode = ViewBag.code;
    var ename = ViewBag.name;
}


<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">
            <div class="caption" style="color:#0E5679;font-weight:900;font-size:medium;">
                <i class="fa fa-cubes" style="color:#0E5679"></i>
                ADD SPARE PART
            </div>

        </div>
        <br>

        <div class="body">
            <form action="AddSparepartDetails" method="post" name="contact_form" id="first_form">

                <input type="hidden" value="@VesselName" name="Vessel" />
               
                        <table class="table" style="color:#0E5679;border-color:#0E5679;">
                            <tr>
                                <td style="border:none;">

                                    <input type="text" class="form-control valid" readonly name="EquipmentCode" value="@ecode" id="n2" style="float:left;width:21%;color:#0E5679;border-color:#0E5679" />

                                    <div style="float:left;position:relative;left:-2px;">

                                        <input type="text" class="form-control valid" name="EquipmentName" value="@ename" id="n2" style="margin-left:15%;border-color:#0E5679;float:left;width:110%;height:auto;color:#0E5679;" />
                                    </div>
                                    <div style="float:left;position:relative;left:36px;">

                                        <input type="text" class="form-control valid" placeholder="Spare parts description" name="SPAR_PARTS_DESCRIPTION" id="n2" style="border-color:#0E5679;margin-left:15%;float:left;width:110%;height:auto;color:#0E5679;" />
                                    </div>
                                    <div style="float:left;position:relative;">

                                        <input type="text" class="form-control valid" placeholder="Part number" name="PART_NUMBER" id="n3" style="border-color:#0E5679;margin-left:56%;float:left;width:110%;height:auto;color:#0E5679;" />
                                    </div>
                                </td>
                            </tr>
                            
                            <tr>
                                <td style="border:none;">
                                    <input type="text" class="form-control valid" placeholder="Drawing number" name="DRAWING_NO" id="n4" style="float:left;width:21%;color:#0E5679;border-color:#0E5679" />
                                    <div style="float:left;position:relative;left:-2px;">

                                        <input type="text" class="form-control valid" placeholder="Specification" name="SPECIFICATION" id="n4" style="margin-left:15%;border-color:#0E5679;float:left;width:110%;height:auto;color:#0E5679;" />
                                    </div>
                                    <div style="float:left;position:relative;left:36px;">

                                        <input type="text" class="form-control valid" placeholder="Position number" name="POSITION_NUMBER" id="n4" style="border-color:#0E5679;margin-left:16%;float:left;width:110%;height:auto;color:#0E5679;" />
                                    </div>
                                </td>
                            </tr>
                           
                            
                            <tr>
                                @Html.AntiForgeryToken()
                                <td style="border:none;"><input type="submit" value="&#xf0f6" class="fa fa-floppy-o aria-hidden=true" style="float:right;right:21%;width:30px;position:relative;height:30px;background-color:#0E5679;color:white;" id="submit" /></td>
                            </tr>
                        </table>

                   
            </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("form").on('submit', function (e) {
            $(".valid").each(function () {

                var input = $(this);
                if (input.val() == "") {
                    swal($(this).attr("name") + " Cannot be blank");
                    e.preventDefault();
                    return false;
                }
                else {
                   
                    });
                }
            });
        });
    });
</script>
