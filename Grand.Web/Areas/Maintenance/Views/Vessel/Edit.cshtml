@model VesselForDisplay


@Html.BeginForm("EditItem", "Vessel", FormMethod.Get, new { id = Model.VesselID })


<input type="hidden" value="@Model.VesselID" name="VesselId" class="form-control" />

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">

            <ul class="header-dropdown m-r--5">
                <li class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="material-icons">more_vert</i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="javascript:void(0);">Action</a></li>
                        <li><a href="javascript:void(0);">Another action</a></li>
                        <li><a href="javascript:void(0);">Something else here</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <br>
        <div class="body">
            <form action="AddVesselDetails" method="get">

                <div class="container-fluid" style="width: 80%;">
                    <div class="table-responsive">

                        <table class="table">

                            <tr>
                                <td><label for="VesselName">Vessel Name</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" value="@Model.Vessel_name" name="Vessel_name" class="form-control" />
                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td><label for="VesselType">Vessel Type</label></td>
                                <td>
                                    <select class="form-control show-tick"  name="Vessel_type">

                                        <option selected disabled>@Model.Vessel_type</option>
                                        <option>Bulk</option>
                                        <option>Tanker</option>
                                        <option>LNG</option>
                                        <option>Container</option>
                                        <option>LPG</option>

                                    </select>
                                </td>
                            </tr>

                            <tr>
                                <td><label for="IMO">IMO</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" value="@Model.IMO" name="IMO" class="form-control" />
                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td><label for="Flag">Flag</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" value="@Model.Flag" name="Flag" class="form-control" />

                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td><label for="HullNo">Hull No</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" value="@Model.Hull_no" name="Hull_no" class="form-control" />

                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td><label for="Class">Class</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" value="@Model.Class" name="Class" class="form-control" />

                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td><label for="Shipyard">Shipyard</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" value="@Model.Shipyard" name="Shipyard" class="form-control" />

                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td><label for="MainEngine">Main Engine</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" value="@Model.Main_Engine" name="Main_Engine" class="form-control" />

                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td><label for="AuxiliaryEngine">Auxiliary Engine</label></td>
                                <td>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" value="@Model.Auxiliary_Engine" name="Auxiliary_Engine" class="form-control" />

                                        </div>
                                    </div>
                                </td>
                            </tr>

                            @*<tr>
                                    <td><label for="ReportedBy">Reported By</label></td>
                                    <td>
                                        <select class="form-control show-tick" name="ReportedBy">
                                            <option value="">-- Please select --</option>
                                            <option value="Chief Engineer">Chief Engineer</option>
                                            <option value="Second Engineer">Second Engineer</option>
                                            <option value="Fourth Engineer">Fourth Engineer</option>


                                        </select>
                                    </td>
                                </tr>*@


                            <tr>
                                <td><input type="submit" class="btn btn-primary m-t-15 waves-effect" value="Add Vessel" /></td>
                                @*<td><button class="btn btn-primary m-t-15 waves-effect">SUBMIT</button></td>*@

                            </tr>

                        </table>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<input type="submit" value="Edit" class="btn btn-primary" />
