  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Add Reported By
                </h2>
                
            </div>
            <br>
            <div class="body">
                <form action="AddMakerDetails" method="post">

                    <div class="container-fluid" style="width: 80%;">
                        <div class="table-responsive">

                            <table class="table">

                                <tr>
                                    <td><label for="EquipmentName">Reported By</label></td>
                                    <td>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input type="text" class="form-control" name="Name" />
                                            </div>
                                        </div>
                                    </td>
                                </tr>

                                <tr>
                                    <td><label for="Code">Added For</label></td>
                                    <td>
                                        <select class="form-control show-tick" name="Maker">
                                                <option value="" name="">Breakdown Job</option>
                                        </select>
                                    </td>
                                </tr>
                                
                                <tr>
                                    @Html.AntiForgeryToken()
                                    <td><input type="submit" class="btn btn-primary m-t-15 waves-effect" value="Add" /></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
