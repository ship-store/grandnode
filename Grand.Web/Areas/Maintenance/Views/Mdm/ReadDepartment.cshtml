                    function AddDepartmentDetails() {
                        var deptName = $("#textInput1").val();


                        $.ajax({
                            type: "GET",
                            url: "@Url.Action("AddDepartments")" + "?Departments=" + deptName,
                            data: "{}",
                            contentType: "application/json; charset=utf-8",
                            dataType: "json",
                            success: function (datas) {
