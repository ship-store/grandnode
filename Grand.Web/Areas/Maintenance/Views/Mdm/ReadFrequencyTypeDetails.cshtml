        function AddFrequencyTypeDetails(){
          
            var Frequency_type = $("#textInputFrequencyType").val();
           
                    $.ajax({
                            type: "GET",
                            url: "@Url.Action("AddFrequencyTypeDetail")" + "?Frequency_type=" +Frequency_type,
                            data: "{}",
                            contentType: "application/json; charset=utf-8",
                            dataType: "json",
                            success: function (datas) {
                            
                             $("#textInputFrequencyType").val(" ");
                                $('#FrequencyTypeGrid').empty();
                                LoadFrequencyTypeGrid();

                            }

                        });

        }
        
    </script>
